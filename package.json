{
  "private": true,
  "scripts": {
    "start": "npm install && npm run compile && electron ./app",
    "test": "mocha",
    "compile": "rimraf app/out",
    "pack": "npm run compile && build --dir",
    "dist": "npm run compile && build"
  },
  "build": {
    "appId": "xyz.munvier.Higgins",
    "category": "public.app-category.dev",
    "productName": "Higgins",
    "dmg": {
      "background": "build/background.png",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "squirrel",
        "zip"
      ],
      "remoteReleases": "https://github.com/munvier/Higgins",
      "loadingGif": "build/install-spinner.gif",
      "msi": true
    }
  },
  "dependencies": {
    "cheerio": "^0.22.0",
    "co": "^4.6.0",
    "co-busboy": "1.3.1",
    "co-from-stream": "0.0.0",
    "co-fs": "^1.2.0",
    "co-fs-extra": "^1.1.0",
    "co-request": "^1.0.0",
    "co-views": "^2.1.0",
    "ejs": "^2.3.4",
    "electron-config": "^0.2.1",
    "electron-context-menu": "^0.5.0",
    "electron-dl": "^1.5.0",
    "electron-is-dev": "^0.1.2",
    "html-entities": "^1.2.0",
    "koa": "^1.0.0",
    "koa-bodyparser": "^2.0.1",
    "koa-morgan": "^0.3.0",
    "koa-mount": "^1.3.0",
    "koa-router": "^5.1.2",
    "koa-static": "^1.4.9",
    "optimist": "^0.6.1",
    "tracer": "^0.8.0",
  },
  "devDependencies": {
    "electron": "^1.4.0",
    "electron-builder": "^6.7.6",
    "mocha": "^3.0.2",
    "rimraf": "^2.5.4",
    "spectron": "^3.3.0"
  },
  "packageIgnore": [
    "LICENSE.md",
    "README.md",
    "TODO.md",
    "Dockerfile",
    ".DS_Store",
    ".travis.yml",
    "appveyor.yml",
    "tests",
    "dist",
    "build/Screenshot.png"
  ]
}
